
root = true

# All files
[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# C# files
[*.cs]
csharp_style_preserve_single_line_blocks = true
csharp_style_preserve_single_line_statements = true
csharp_style_require_braces = true
csharp_style_require_accessibility_modifiers = for_non_interface_members
csharp_preferred_modifier_order = public, internal, protected, private, static, readonly

# JSON files
[*.json]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
